<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/workout_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Workout Type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/workout_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Workout Time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workout_type"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/workout_days"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Workout Days"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workout_time"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>